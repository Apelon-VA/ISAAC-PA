<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/install4j</directory>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/main/install4j/</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/main/scripts/</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/pom.xml</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/logback.xml</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/assembly.xml</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/assembly/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/assembly-withDB.xml</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/assembly/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/LICENSE.txt</source>
            <outputDirectory>META-INF/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/LICENSE.txt</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/MANIFEST.MF</source>
            <outputDirectory>META-INF/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/assembly/MANIFEST.MF</source>
            <outputDirectory>META-INF/maven/${groupId}/${artifactId}/src/assembly/</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <includeBaseDirectory>false</includeBaseDirectory>
</assembly>
